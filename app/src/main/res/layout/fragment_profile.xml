<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    tools:context=".ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Profile Header Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="4dp">

                    <ImageView
                        android:id="@+id/profileImageView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_account_circle" />
                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/profileNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="User Name"
                    android:textColor="#212529"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profileEmailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="user@example.com"
                    android:textColor="#6C757D"
                    android:textSize="14sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changePictureButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Edit Profile Photo"
                    android:textAllCaps="false"
                    android:textColor="#0D6EFD" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Account Settings Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="ACCOUNT SETTINGS"
            android:textColor="#6C757D"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changeNameButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="16dp"
                    android:text="Change Name"
                    android:textAllCaps="false"
                    android:textColor="#212529"
                    app:icon="@drawable/ic_account_circle"
                    app:iconPadding="16dp"
                    app:iconTint="#495057" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#E9ECEF" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/changePasswordButton"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:gravity="center_vertical|start"
                    android:paddingStart="16dp"
                    android:text="Change Password"
                    android:textAllCaps="false"
                    android:textColor="#212529"
                    app:icon="@android:drawable/ic_lock_lock"
                    app:iconPadding="16dp"
                    app:iconTint="#495057" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Preferences Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="PREFERENCES"
            android:textColor="#6C757D"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/setCurrencyButtonContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setCurrencyButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical|start"
                        android:paddingStart="16dp"
                        android:text="Currency"
                        android:textAllCaps="false"
                        android:textColor="#212529"
                        app:icon="@android:drawable/ic_menu_today"
                        app:iconPadding="16dp"
                        app:iconTint="#495057" />
                    
                    <TextView
                        android:id="@+id/profileCurrencyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="12dp"
                        android:text="USD"
                        android:textColor="#0D6EFD"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="56dp"
                    android:background="#E9ECEF" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/setTimezoneButton"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:gravity="center_vertical|start"
                        android:paddingStart="16dp"
                        android:text="Timezone"
                        android:textAllCaps="false"
                        android:textColor="#212529"
                        app:icon="@android:drawable/ic_menu_recent_history"
                        app:iconPadding="16dp"
                        app:iconTint="#495057" />

                    <TextView
                        android:id="@+id/profileTimezoneTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="-12dp"
                        android:layout_marginBottom="12dp"
                        android:text="UTC"
                        android:textColor="#0D6EFD"
                        android:textSize="12sp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Danger Zone Group -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"
            android:text="DANGER ZONE"
            android:textColor="#DC3545"
            android:textSize="12sp"
            android:textStyle="bold"
            android:letterSpacing="0.1" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="1dp"
            app:strokeWidth="0dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/deleteAccountButton"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:gravity="center_vertical|start"
                android:paddingStart="16dp"
                android:text="Delete Account"
                android:textAllCaps="false"
                android:textColor="#DC3545"
                app:icon="@android:drawable/ic_menu_delete"
                app:iconPadding="16dp"
                app:iconTint="#DC3545" />
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>